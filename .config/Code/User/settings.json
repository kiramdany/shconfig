{
  "editor.wordWrap": "on",
  // "editor.formatOnSave": true,
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Dracula",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "editor.tabCompletion": "on",
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.minimap.enabled": false,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "typescript": "typescriptreact"
  },
  "files.associations": {
    "BUILD": "plz" // This will highlight syntax in BUILD files. Ideally this should be used with the run on save plugin to prevent vscode reformatting the BUILD files
  },
  "typescript.updateImportsOnFileMove.enabled": "never", // VSCode doesnâ€™t seem to get this right reliably in our repo
  // "workbench.settings.editor": "json",
  "workbench.settings.useSplitJSON": true,
  "gitlens.mode.active": "review",
  "bracket-pair-colorizer-2.colors": [
    /* Dracula Theme*/
    /* --- */
    // Foreground
    "#F8F8F2",
    // Comment
    "#6272A4",
    // Cyan
    "#8BE9FD",
    // Purple
    "#BD93F9"
  ],
  "bracket-pair-colorizer-2.colorMode": "Independent",
  "bracket-pair-colorizer-2.showBracketsInGutter": true,
  "importSorter.sortConfiguration.customOrderingRules.rules": [
    {
      "type": "importMember",
      "regex": "^$",
      "orderLevel": 50,
    },
    {
      "regex": "react",
      "orderLevel": 15,
    },
    {
      "regex": "^[@]",
      "orderLevel": 30
    },
    {
      "regex": "common",
      "orderLevel": 35
    },
    {
      "regex": "^[.]",
      "orderLevel": 40
    },
    {
      "regex": "scss$",
      "orderLevel": 45
    }
  ],
  "importSorter.sortConfiguration.removeUnusedImports": true,
  "importSorter.sortConfiguration.removeUnusedDefaultImports": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.arrowParens": "always",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "javascript.validate.enable": false,
  "eslint.autoFixOnSave": true,
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "gitlens.views.repositories.files.layout": "list",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "timeline.excludeSources": [],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.activityBar.visible": false,
  "workbench.editor.revealIfOpen": false
}